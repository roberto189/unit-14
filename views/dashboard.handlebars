<h1 class="display-4">Dashboard</h1>
<h4 id="username" data-id="{{id}}">{{username}} Posts</h4>

{{#if posts.length}}
  {{#each posts }}
    <div id="post" data-id="{{id}}" class="card">
      <div class="card-header">
        {{title}}
      </div>
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <p>{{content}}</p>
          <footer class="blockquote-footer">Created on {{date_created}}</footer>
        </blockquote>
        <button id="delPost" type="button" class="btn btn-primary">Delete post</button>
        <button id="updatePost" type="button" class="btn btn-primary">Update post</button>
      </div>
    </div>
  {{/each}}
  <div id="post" data-id="{{id}}" class="card">
      <div class="card-header">
        <h1>title</h1>
      </div>
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <p>content</p>
          <footer class="blockquote-footer">Created on {{date_created}}</footer>
        </blockquote>
        <button id="delPost" type="button" class="btn btn-primary">Delete post</button>
        <button id="updatePost" type="button" class="btn btn-primary">Update post</button>
      </div>
    </div>
{{else}}
  <p>No posts found.</p>
{{/if}}

<button type="button" id="addPostButton" data-toggle="modal" data-target="#addPostModal" class="btn btn-primary">Add post</button>

<div id="addPostModal" role="dialog" aria-hidden="true" aria-labeledby="addPostModal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Form for new post</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input id="title" name="post-title" type="text" class="form-control" required>
        </div>
        <div class="mb-3">
          <label for="content" class="form-label">Post text</label>
          <textarea id="content" name="content" class="form-control" required></textarea>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="addPost" type="button" class="btn btn-primary">Add post</button>
      </div>
    </div>
  </div>
</div>
{{#if post.length}}

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
{{/if}}
